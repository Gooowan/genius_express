doctype html
html
    head
        title Edit #{song.title}
    body(style='font-family: Arial, sans-serif; background-color: #f0f0f0; padding: 20px;')
        h1(style='color: #333;') Edit #{song.title}
        form(action=`/${song._id}?_method=PUT`, method="post", style='background-color: white; padding: 20px; border-radius: 5px; box-shadow: 0 0 10px rgba(0,0,0,0.1);')
            label(for="title", style='display: block; margin-top: 20px; font-size: 16px;') Title
            input#title(type="text", name="title", value=song.title, style='width: 100%; padding: 8px; margin-top: 5px; border-radius: 4px; border: 1px solid #ccc;')

            label(for="artist", style='display: block; margin-top: 20px; font-size: 16px;') Artist
            input#artist(type="text", name="artist", value=song.artist, style='width: 100%; padding: 8px; margin-top: 5px; border-radius: 4px; border: 1px solid #ccc;')

            label(for="lyrics", style='display: block; margin-top: 20px; font-size: 16px;') Lyrics
            textarea#lyrics(name="lyrics", style='width: 100%; height: 100px; padding: 8px; margin-top: 5px; border-radius: 4px; border: 1px solid #ccc;') #{song.lyrics}

            button(type="submit", style='background-color: #4CAF50; color: white; padding: 10px 15px; margin-top: 20px; border: none; border-radius: 4px; cursor: pointer;') Update Song

        a(href=`/${song._id}`, style='display: inline-block; margin-top: 20px; color: #007bff; text-decoration: none;') Cancel
